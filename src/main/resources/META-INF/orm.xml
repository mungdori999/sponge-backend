<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://www.hibernate.org/xsd/orm/mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.hibernate.org/xsd/orm/mapping
                                     https://hibernate.org/xsd/orm/mapping/mapping-3.1.0.xsd">
    <access>FIELD</access>

    <mapped-superclass class="com.mungdori.sponge.domain.AbstractEntity">
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="IDENTITY"/>
            </id>
        </attributes>
    </mapped-superclass>

    <entity class="com.mungdori.sponge.domain.owner.Owner">
        <table name="owner">
            <unique-constraint name="UK_OWNER_EMAIL_ADDRESS">
                <column-name>email_address</column-name>
            </unique-constraint>
            <unique-constraint name="UK_OWNER_DETAIL_ID">
                <column-name>detail_id</column-name>
            </unique-constraint>
        </table>
        <attributes>
            <basic name="nickname">
                <column name="nickname" nullable="false" length="100"/>
            </basic>
            <basic name="passwordHash">
                <column name="password_hash" nullable="false" length="200"/>
            </basic>
            <basic name="status">
                <column name="status" nullable="false" length="50"/>
                <enumerated>STRING</enumerated>
            </basic>
            <one-to-one name="detail" fetch="LAZY">
                <cascade>
                    <cascade-all />
                </cascade>
            </one-to-one>
            <embedded name="email">
            </embedded>
        </attributes>
    </entity>

    <entity class="com.mungdori.sponge.domain.owner.OwnerDetail">
        <attributes>
            <basic name="registeredAt">
                <column name="registered_at" nullable="false"/>
            </basic>
            <basic name="activatedAt">
                <column name="activated_at"/>
            </basic>
            <basic name="deactivatedAt">
                <column name="deactivated_at"/>
            </basic>
        </attributes>
    </entity>

    <embeddable class="com.mungdori.sponge.domain.shared.Email">
        <attributes>
            <basic name="address">
                <column name="email_address" nullable="false" length="150"/>
            </basic>
        </attributes>
    </embeddable>
</entity-mappings>